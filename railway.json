{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && go build -o bin/main ./cmd/main.go"
  },
  "deploy": {
    "startCommand": "cd backend && ./bin/main",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
