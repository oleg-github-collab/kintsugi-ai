# Server Configuration
PORT=8080
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/kintsugi?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-here

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_PREMIUM_STARTER=price_starter_id
STRIPE_PRICE_PREMIUM_PRO=price_pro_id
STRIPE_PRICE_PREMIUM_ULTRA=price_ultra_id
STRIPE_PRICE_UNLIMITED=price_unlimited_id

# 100ms (Video/Audio)
HMS_APP_ACCESS_KEY=your_100ms_access_key
HMS_APP_SECRET=your_100ms_secret

# DeepL
DEEPL_API_KEY=your_deepl_api_key

# Token Limits (можна налаштовувати)
BASIC_TOKEN_LIMIT=100000
PREMIUM_STARTER_TOKEN_LIMIT=500000
PREMIUM_PRO_TOKEN_LIMIT=2000000
PREMIUM_ULTRA_TOKEN_LIMIT=5000000
UNLIMITED_TOKEN_LIMIT=-1
TOKEN_RESET_INTERVAL=6h

# File Storage (MinIO / S3)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=kintsugi-files
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
